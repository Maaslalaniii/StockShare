<div class="container">
	<div class="row">
		<h1 class="text-center">Quote</h1>
	</div>

	{{#if stockName}}
		<div class="row text-center top-buffer">
			<strong>{{stockName}}</strong> costs ${{stockPrice}}
			<br>
			<a class="text-center block top-buffer" href="/quote">again?</a>
		</div>
	{{else}}
		<div class="row">
			<form method="POST" action="/quote" class="form-group col-sm-6 col-sm-offset-3">
				<label class="control-label" for="quote">Stock</label>
				<input class="form-control" autocomplete="off" name="quote" id="quote" type="text">
				<input class="top-buffer btn btn-primary col-sm-6 col-sm-offset-3" type="submit" name="get-quote-button" value="Get Quote">
			</form>
		</div>
	{{/if}}

</div>